<?xml version="1.0" encoding="utf-8"?>
<layout>
  <grid>
    <row>
      <button text="Wake On Lan" onTap="@wol" color="green" />
      <button text="Sleep" onTap="sleep" color="red" />
    </row>
    <row>
      <button text="Start Yuzu" onTap="start" />
      <button text="Close Yuzu" onTap="close" />
    </row>
    <row>
      <button text="Stop Emulation" onTap="stop" />
      <button text="Press Y" onTap="yes" />
      <button text="Toggle Fullscreen" onTap="toggle" />
    </row>
  </grid>
</layout>
